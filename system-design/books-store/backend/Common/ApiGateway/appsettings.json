{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "BooksService": {
        "ClusterId": "BooksCluster",
        "Match": {
          "Path": "books-service/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/{**catch-all}" }
        ]
      },
      "AuthService": {
        "ClusterId": "AuthCluster",
        "Match": {
          "Path": "auth-service/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "identity/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "BooksCluster": {
        "HealthCheck": {
          "Active": {
            "Enabled": "true",
            "Interval": "00:00:10",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/api/health"
          }
        },
        "Metadata": {
          "ConsecutiveFailuresHealthPolicy.Threshold": "3"
        },
        "Destinations": {
          "BooksAPI": {
            "Address": "https://localhost:5271"
          }
        }
      },
      "UsersCluster": {
        "Destinations": {
          "UsersAPI": {
            "Address": "https://localhost:9090"
          }
        }
      },
      "AuthCluster": {
        "Destinations": {
          "AuthService": {
            "Address": "https://localhost:5220"
          }
        }
      }
    }
  }
}
