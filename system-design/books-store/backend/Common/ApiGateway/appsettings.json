{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "books-service": {
        "ClusterId": "books-cluster",
        "Match": {
          "Path": "books-service/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "books-cluster": {
        "HealthCheck": {
          "Active": {
            "Enabled": "true",
            "Interval": "00:00:10",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/api/health"
          }
        },
        "Metadata": {
          "ConsecutiveFailuresHealthPolicy.Threshold": "3"
        },
        "Destinations": {
          "Books.API": {
            "Address": "https://localhost:5271"
          }
        },
        "users-cluster": {
          "Destinations": {
            "Users.API": {
              "Address": "https://localhost:9090"
            }
          }
        }
      }
    }
  }
}
